{
  "productName": "Nous",
  "version": "0.0.1",
  "identifier": "nous.app.react",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "app",
    "icon": [
      "icons/32x31.png",
      "icons/64x62.png",
      "icons/128x125.png",
      "icons/512x503.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "nous CLI",
      "args": [
        {
          "name": "graph",
          "short": "g",
          "takesValue": true,
          "description": "Default graph type"
        },
        {
          "name": "file",
          "short": "f",
          "takesValue": true,
          "description": "Default loaded project file"
        },
        {
          "name": "rpc_server",
          "takesValue": false,
          "description": "Start as RPC server"
        },
        {
          "name": "rpc_client",
          "takesValue": false,
          "description": "Start as RPC client"
        },
        {
          "name": "port",
          "short": "p",
          "takesValue": true,
          "description": "Port of RPC server"
        }
      ]
    }
  }
}
